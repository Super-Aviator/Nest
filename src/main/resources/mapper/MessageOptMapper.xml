<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="mapper">
    <select id="selectMsg" resultType="HistoryChatMessage" parameterType="Tuple" timeout="20">
        SELECT * FROM
        <if test="e=='friend'">
            friend_msg
        </if>
        <if test="e=='group'">
            group_msg
        </if>
        AS A
        WHERE A.id = #{t}
        OR A.rev_id = #{t}
        ORDER BY A.timestamp LIMIT 0,10;
    </select>

    <insert id="storeMsg" parameterType="HistoryChatMessage" statementType="PREPARED" timeout="20">
        INSERT INTO
        <if test="type=='friend'">
            friend_msg
        </if>
        <if test="type=='group'">
            group_msg
        </if>
        (username,id,rev_id,avatar,timestamp,content)
        VALUES(#{username},#{id},#{revId},#{avatar},#{timestamp},#{content});
    </insert>

</mapper>