<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="mapper">
    <select id="selectMsg" resultType="HistoryChatMessage" statementType="PREPARED" parameterType="Triple" timeout="20">
        SELECT * FROM
        <if test="c=='friend'">
            friend_msg
        </if>
        <if test="c=='group'">
            group_msg
        </if>
        AS A
        WHERE (A.id = #{a} AND A.rev_id=#{b})
        OR (A.id = #{b} AND A.rev_id=#{a})
        ORDER BY A.timestamp LIMIT 0,20;
    </select>

    <insert id="storeMsg" parameterType="HistoryChatMessage" statementType="PREPARED" timeout="20">
        INSERT INTO
        <if test="type=='friend'">
            friend_msg
        </if>
        <if test="type=='group'">
            group_msg
        </if>
        (username,id,rev_id,avatar,timestamp,content)
        VALUES(#{username},#{id},#{revId},#{avatar},#{timestamp},#{content});
    </insert>

</mapper>